<Window x:Class="Schedule.Windows.EditScheduleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit schedule item" Height="300" Width="300" ResizeMode="CanMinimize" 
        ShowInTaskbar="False" SizeToContent="Height" SnapsToDevicePixels="True" WindowStartupLocation="CenterScreen">
    <DockPanel Margin="7">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button x:Name="ApplyButton" Padding="7 1" Margin="0 0 7 0" Click="ApplyButton_OnClick">_Apply</Button>
            <Button x:Name="CloseButton" Padding="7 1">Close</Button>
        </StackPanel>
        <Grid x:Name="EditorsGrid" Margin="0 0 0 7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
        </Grid>
    </DockPanel>
</Window>
