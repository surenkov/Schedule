<Window x:Class="Schedule.Windows.ConflictsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conflicts" Height="300" Width="600" Background="#EAEAEA" 
        WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize" SnapsToDevicePixels="True">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Edit">
                <MenuItem Header="Remove selected conflict" />
                <MenuItem Header="Remove all conflicts" />
                <Separator />
                <MenuItem Header="Close" Click="ConflictsWindow_Close" />
            </MenuItem>
        </Menu>
        <Button DockPanel.Dock="Bottom" Width="70" Margin="7" HorizontalAlignment="Right" Click="ConflictsWindow_Close">Close</Button>
        <TreeView Name="ConflictsView" Margin="7 7 7 0" />
    </DockPanel>
</Window>
