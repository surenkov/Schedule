<Window x:Class="Schedule.Windows.ConflictsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conflicts" Height="300" Width="600" Background="#EAEAEA" 
        WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Edit">
                <MenuItem Header="Remove selected conflict" />
                <MenuItem Header="Remove all conflicts" />
                <Separator />
                <MenuItem Header="Close" Click="ConflictsWindow_Close" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="ConflictsCountBlock" />
            </StatusBarItem>
        </StatusBar>
        <TreeView Name="ConflictsView" Margin="7" />
    </DockPanel>
</Window>
