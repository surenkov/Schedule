<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Schedule.Windows.ConflictsWindow"
        Title="Conflicts" Height="300" Width="600" Background="#EAEAEA"
        WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize" SnapsToDevicePixels="True">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" HorizontalAlignment="Right" Padding="5 0" Click="ConflictsWindow_Close">Close</Button>
    </Grid>
</Window>